// Place your key bindings in this file to override the defaults
[
    // === windows and views
    // -- split and navigate panes
    {
        "key": "ctrl+shift+\\",
        "command": "workbench.action.splitEditorOrthogonal"
    },
    {
        "key": "ctrl+alt+left",
        "command": "workbench.action.focusLeftGroup"
    },
    {
        "key": "ctrl+alt+right",
        "command": "workbench.action.focusRightGroup"
    },
    {
        "key": "ctrl+r",
        "command": "editor.action.startFindReplaceAction"
    },
    {
        "key": "ctrl+f5",
        "command": "workbench.action.reloadWindow",
        "when": "editorTextFocus"
    },
    // -- switch to nth tab
    {
        "key": "ctrl+1",
        "command": "workbench.action.openEditorAtIndex1"
    },
    {
        "key": "ctrl+2",
        "command": "workbench.action.openEditorAtIndex2"
    },
    {
        "key": "ctrl+3",
        "command": "workbench.action.openEditorAtIndex3"
    },
    {
        "key": "ctrl+4",
        "command": "workbench.action.openEditorAtIndex4"
    },
    {
        "key": "ctrl+5",
        "command": "workbench.action.openEditorAtIndex5"
    },
    {
        "key": "ctrl+6",
        "command": "workbench.action.openEditorAtIndex6"
    },
    {
        "key": "ctrl+7",
        "command": "workbench.action.openEditorAtIndex7"
    },
    {
        "key": "ctrl+8",
        "command": "workbench.action.openEditorAtIndex8"
    },
    {
        "key": "ctrl+9",
        "command": "workbench.action.openEditorAtIndex9"
    },
    {
        "key": "ctrl+0",
        "command": "workbench.action.lastEditorInGroup"
    },
    // -- change language
    {
        "key": "ctrl+shift+l",
        "command": "workbench.action.editor.changeLanguageMode"
    },
    // --- extensions
    {
        "key": "alt+x",
        "command": "workbench.view.extensions"
    },
    // --- keybindings
    // {
    //     "key": "ctrl+.",
    //     "command": "workbench.action.openGlobalKeybindings"
    // },
    // --- md preview
    {
        "key": "ctrl+shift+m",
        "command": "markdown.showPreview",
        "when": "editorLangId == 'markdown'"
    },
    // -- explorer
    {
        "key": "alt+t",
        "command": "workbench.view.explorer"
    },
    // // --- terminal
    // {
    //     "key": "alt+shift+t",
    //     "command": "workbench.action.terminal.toggleTerminal"
    // },
    // --- theme browser
    {
        "key": "alt+shift+t",
        "command": "workbench.action.selectTheme"
    },
    // === movement && selection
    {
        "key": "alt+shift+,",
        "command": "cursorTop",
        "when": "editorTextFocus && !editorReadonly"
    },
    {
        "key": "alt+shift+.",
        "command": "cursorBottom",
        "when": "textInputFocus && !editorReadonly"
    },
    {
        "key": "alt+g",
        "command": "workbench.action.gotoLine"
    },
    {
        "key": "ctrl+up",
        "when": "editorTextFocus",
        "command": "block-travel.jumpUp",
    },
    {
        "key": "ctrl+shift+up",
        "when": "editorTextFocus",
        "command": "block-travel.selectUp",
    },
    {
        "key": "ctrl+down",
        "when": "editorTextFocus",
        "command": "block-travel.jumpDown",
    },
    {
        "key": "ctrl+shift+down",
        "when": "editorTextFocus",
        "command": "block-travel.selectDown",
    },
    {
        "key": "ctrl+e",
        "command": "cursorEnd",
        "when": "textInputFocus"
    },
    {
        "key": "ctrl+shift+e",
        "command": "cursorEndSelect",
        "when": "textInputFocus"
    },
    {
        "key": "ctrl+a",
        "command": "cursorHome",
        "when": "textInputFocus"
    },
    {
        "key": "ctrl+shift+a",
        "command": "cursorHomeSelect",
        "when": "textInputFocus"
    },
    // --- sub words
    {
        "key": "ctrl+right",
        "command": "cursorWordPartRight",
        "when": "textInputFocus"
    },
    {
        "key": "ctrl+shift+right",
        "command": "cursorWordPartRightSelect",
        "when": "textInputFocus"
    },
    {
        "key": "ctrl+left",
        "command": "cursorWordPartStartLeft",
        "when": "textInputFocus"
    },
    {
        "key": "ctrl+shift+left",
        "command": "cursorWordPartStartLeftSelect",
        "when": "textInputFocus"
    },
    {
        "key": "ctrl+backspace",
        "command": "deleteWordPartLeft",
        "when": "textInputFocus && !editorReadonly"
    },
    {
        "key": "ctrl+delete",
        "command": "deleteWordPartRight",
        "when": "textInputFocus && !editorReadonly"
    },
    // --- multicursor
    {
        "key": "alt+down",
        "command": "editor.action.insertCursorBelow",
        "when": "textInputFocus && !editorReadonly"
    },
    {
        "key": "alt+up",
        "command": "editor.action.insertCursorAbove",
        "when": "textInputFocus && !editorReadonly"
    },
    // === editing
    {
        "key": "ctrl+h",
        "command": "editor.action.selectAll",
        "when": "textInputFocus"
    },
    {
        "key": "ctrl+shift+d",
        "command": "editor.action.copyLinesDownAction",
        "when": "editorTextFocus"
    },
    {
        "key": "ctrl+i",
        "command": "editor.action.formatDocument",
        "when": "editorTextFocus && !editorReadonly"
    },
    // --- change case
    {
        "key": "ctrl+u u",
        "command": "editor.action.transformToUppercase",
        "when": "editorTextFocus && !editorReadonly"
    },
    {
        "key": "ctrl+u l",
        "command": "editor.action.transformToLowercase",
        "when": "editorTextFocus && !editorReadonly"
    },
    // === MACROS
    {
        "key": "ctrl+k",
        "command": "macros.kill"
    },
    {
        "key": "alt+q",
        "command": "workbench.action.terminal.sendSequence",
        "args": {
            // "text": "${env:USERNAME}",  // this works
            "text": "file = ${file};  workspaceFolder = ${workspaceFolder}"
        }
    },


]